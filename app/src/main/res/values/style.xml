<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Heading">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Heading.Grey">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Heading.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Heading.XBold">
        <item name="fontFamily">@font/inter_extrabold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Heading.Bold">
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="Heading.Bold.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/yellow</item>
    </style>

    <style name="BottomNavigation">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Heading.XBold.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Heading.XBold.Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Heading.XBold.Yellow">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>